# ================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION FOR THE DAS BOARD
# ================================================================
# IMPORTANT: This file contains production-specific configurations
# - Copy this file to .env.production for production builds
# - Use platform environment variables for sensitive data
# - Never commit actual values to version control
# - All URLs must use HTTPS in production
# ================================================================

# ================================================================
# CORE PRODUCTION CONFIGURATION (REQUIRED)
# ================================================================

# Supabase Production Instance (REQUIRED - must be HTTPS)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here

# Production API Configuration (REQUIRED - must be HTTPS)
VITE_API_URL=https://api.yourdomain.com
VITE_APP_URL=https://app.yourdomain.com
VITE_MARKETING_URL=https://yourdomain.com

# Environment Identifier (REQUIRED)
VITE_ENVIRONMENT=production

# Deployment Version (for cache busting and tracking)
VITE_DEPLOYMENT_VERSION=1.0.0

# Base Path (use "/" for root domain, "/app" for subdirectory)
VITE_BASE_PATH=/

# ================================================================
# SECURITY CONFIGURATION (REQUIRED FOR PRODUCTION)
# ================================================================

# Session Management
VITE_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_ENABLE_2FA=true

# Rate Limiting (REQUIRED - must be enabled in production)
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_WINDOW=900000  # 15 minutes
VITE_RATE_LIMIT_MAX_REQUESTS=100

# Email Verification (NEVER skip in production)
VITE_SKIP_EMAIL_VERIFICATION=false

# Debug Mode (MUST be false in production)
VITE_DEBUG_MODE=false
VITE_ENABLE_DEVTOOLS=false

# ================================================================
# FEATURE FLAGS (PRODUCTION)
# ================================================================

# Feature toggles for production
VITE_FEATURE_FLAGS={"maintenance_mode":false,"beta_features":false,"analytics":true,"notifications":true}

# Feature-specific configurations
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REALTIME=true

# ================================================================
# THIRD-PARTY INTEGRATIONS (PRODUCTION)
# ================================================================

# Stripe Payment Processing (if using payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_production_key

# Google Analytics (recommended for production)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking with Sentry (highly recommended)
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=${VITE_DEPLOYMENT_VERSION}
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% of transactions

# ================================================================
# CDN AND OPTIMIZATION
# ================================================================

# CDN Configuration (optional but recommended)
CDN_URL=https://cdn.yourdomain.com
VITE_ASSET_URL=https://cdn.yourdomain.com/assets

# Image Optimization Service (optional)
VITE_IMAGE_CDN_URL=https://images.yourdomain.com

# ================================================================
# MONITORING AND LOGGING
# ================================================================

# Application Performance Monitoring
VITE_APM_ENABLED=true
VITE_APM_SERVICE_NAME=das-board-production
VITE_APM_SERVER_URL=https://apm.yourdomain.com

# Logging Configuration
VITE_LOG_LEVEL=error  # error | warn | info | debug
VITE_LOG_TO_CONSOLE=false
VITE_LOG_TO_SERVICE=true

# ================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# ================================================================

# Netlify-specific
NETLIFY_USE_YARN=false
NETLIFY_NEXT_PLUGIN_SKIP=true

# Vercel-specific
VERCEL_ENV=production
VERCEL_URL=https://app.yourdomain.com

# AWS Amplify-specific
AMPLIFY_MONOREPO_APP_ROOT=./
AMPLIFY_DIFF_DEPLOY=false

# ================================================================
# BUILD CONFIGURATION
# ================================================================

# Build Options
NODE_ENV=production
GENERATE_SOURCEMAP=false  # Disable source maps in production
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000
ENABLE_SOURCE_MAPS=false

# Performance Budget
BUNDLE_SIZE_LIMIT=500000  # 500KB warning threshold
CHUNK_SIZE_LIMIT=200000   # 200KB per chunk

# ================================================================
# MOCK API CONFIGURATION (MUST BE DISABLED IN PRODUCTION)
# ================================================================

# Mock API (MUST be false in production)
USE_MOCK_SUPABASE=false
USE_MOCK_API=false
MOCK_API_DELAY=0

# ================================================================
# MULTI-TENANT CONFIGURATION (if applicable)
# ================================================================

# Additional tenant configurations
# VITE_TENANT_ID=main
# VITE_TENANT_ISOLATION=strict
# VITE_TENANT_CUSTOM_DOMAIN=true

# ================================================================
# COMPLIANCE AND LEGAL
# ================================================================

# GDPR and Privacy
VITE_GDPR_ENABLED=true
VITE_COOKIE_CONSENT_REQUIRED=true
VITE_DATA_RETENTION_DAYS=365

# Terms and Conditions
VITE_TERMS_VERSION=1.0
VITE_PRIVACY_VERSION=1.0

# ================================================================
# PRODUCTION CHECKLIST
# ================================================================
# Before deploying to production, ensure:
#
# ✅ All URLs use HTTPS protocol
# ✅ VITE_ENVIRONMENT is set to "production"
# ✅ VITE_SKIP_EMAIL_VERIFICATION is false
# ✅ VITE_DEBUG_MODE is false
# ✅ USE_MOCK_SUPABASE is false
# ✅ Rate limiting is enabled
# ✅ Session timeout is configured
# ✅ Error tracking (Sentry) is configured
# ✅ Analytics is configured
# ✅ All sensitive keys are in secure storage
# ✅ Source maps are disabled
# ✅ CDN is configured (if applicable)
# ✅ Performance monitoring is enabled
# ✅ Security headers are configured
# ✅ CORS is properly configured
# ✅ CSP is properly configured
# ================================================================

# ================================================================
# PLATFORM-SPECIFIC DEPLOYMENT EXAMPLES
# ================================================================

# NETLIFY DEPLOYMENT:
# - Add these variables in Netlify Dashboard > Site Settings > Environment Variables
# - Use Netlify Functions for server-side operations
# - Enable Netlify Identity for additional auth layer

# VERCEL DEPLOYMENT:
# - Add these variables in Vercel Dashboard > Settings > Environment Variables
# - Use Vercel Functions for API routes
# - Enable Vercel Analytics for performance monitoring

# AWS AMPLIFY:
# - Configure in Amplify Console > App Settings > Environment Variables
# - Use Amplify Auth for enhanced authentication
# - Enable CloudWatch for monitoring

# CLOUDFLARE PAGES:
# - Add in Pages Dashboard > Settings > Environment Variables
# - Use Cloudflare Workers for edge functions
# - Enable Cloudflare Analytics

# ================================================================